%div{"ng-controller" => "sessionsController",:class => "app ng-scope app-header-fixed app-aside-fixed"}
  %div{:class => "fade-in-right-big smooth ng-scope"}
    %div{:class => "container w-xxl w-auto-xs ng-scope"}
      .m-b-lg
        %div{:class => "wrapper text-center"}
          %strong Sign in
      %form{"ng-init" => "loginForm = {}", "ng-submit" => "handleLoginBtnClick()", :role => "form", :class => "form-validation ng-pristine ng-valid-email ng-invalid ng-invalid-required"}
        %div{:class => "list-group list-group-sm"}
          %div{:class => "list-group-item" }
            %label email
            %input.form-control{:name => "email", "ng-model" => "loginForm.email", :required => "required", :type => "email", :class => "form-control no-border ng-pristine ng-untouched ng-valid-email ng-invalid ng-invalid-required", :placeholder => "Email"}
          %div{:class => "list-group-item" }
            %label password
            %input.form-control{:name => "password", "ng-model" => "loginForm.password", :required => "required", :type => "password", :class => "form-control no-border ng-pristine ng-untouched ng-valid-email ng-invalid ng-invalid-required"}
        %button{:type => "submit", :class => "btn btn-lg btn-primary btn-block"} Sign in
